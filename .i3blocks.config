# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
separator_block_width=15

[volume]
label=♪
instance=Master
command=~/.config/i3blocks/blocks/volume
interval=once
signal=10

[disk-home]
instance=$HOME
command=~/.config/i3blocks/blocks/disk
interval=30

[wireless]
label=
instance=wlan0
command=~/.config/i3blocks/blocks/network
color=#00FF00
interval=10

[ethernet]
label=E
instance=eth0
command=~/.config/i3blocks/blocks/network
color=#00FF00
interval=10

[battery]
label=⚡
command=~/.config/i3blocks/blocks/battery
interval=30

[time]
command=date '+%Y-%m-%d %H:%M'
interval=5

